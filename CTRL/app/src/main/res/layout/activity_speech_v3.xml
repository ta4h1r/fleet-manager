<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#222831">

    <TextView
        android:id="@+id/tv_listen"
        android:layout_width="573dp"
        android:layout_height="54dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:text="I listen when my ears turn green"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#ce9486"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView6" />

    <TextView
        android:id="@+id/tv_walk"
        android:layout_width="430dp"
        android:layout_height="54dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:text="Stand directly in front of me"
        android:textColor="#ce9486"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView5" />

    <Button
        android:id="@+id/btn_listen"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="66dp"
        android:layout_height="104dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:background="@null"
        android:foreground="@drawable/mic"
        android:onClick="listenButtonClicked"
        android:text=""
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        app:layout_constraintBottom_toTopOf="@+id/answertextview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/questiontextview" />

    <TextView
        android:id="@+id/questiontextview"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/query_background"
        android:gravity="center"
        android:padding="12dp"
        android:text="Query"
        android:textColor="#30475e"
        android:textSize="38sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/answertextview"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="100dp"
        android:background="@drawable/response_background"
        android:gravity="center"
        android:padding="12dp"
        android:text="Response"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#30475e"
        android:textSize="38sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="281dp"
        android:layout_height="104dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/hs_logo" />

    <TextView
        android:id="@+id/tv_ask_me_0"
        android:layout_width="430dp"
        android:layout_height="54dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="180dp"
        android:text="Things you can say to me:"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#ce9486"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_ask_me_2"
        android:layout_width="467dp"
        android:layout_height="65dp"
        android:layout_marginTop="8dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#ce9486"
        app:layout_constraintStart_toStartOf="@+id/tv_ask_me_1"
        app:layout_constraintTop_toBottomOf="@+id/tv_ask_me_1" />

    <TextView
        android:id="@+id/tv_ask_me_1"
        android:layout_width="472dp"
        android:layout_height="62dp"
        android:layout_marginTop="16dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#ce9486"
        app:layout_constraintStart_toStartOf="@+id/tv_ask_me_0"
        app:layout_constraintTop_toBottomOf="@+id/tv_ask_me_0" />

    <TextView
        android:id="@+id/tv_ask_me_3"
        android:layout_width="469dp"
        android:layout_height="64dp"
        android:layout_marginTop="8dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#ce9486"
        app:layout_constraintStart_toStartOf="@+id/tv_ask_me_2"
        app:layout_constraintTop_toBottomOf="@+id/tv_ask_me_2" />

    <TextView
        android:id="@+id/tv_ask_me_4"
        android:layout_width="469dp"
        android:layout_height="67dp"
        android:layout_marginTop="8dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#ce9486"
        app:layout_constraintStart_toStartOf="@+id/tv_ask_me_2"
        app:layout_constraintTop_toBottomOf="@+id/tv_ask_me_3" />

    <TextView
        android:id="@+id/tv_alias"
        android:layout_width="252dp"
        android:layout_height="67dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="24dp"
        android:fontFamily="cursive"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#ce9486"
        android:textSize="55sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <WebView
        android:id="@+id/webview"
        android:layout_width="502dp"
        android:layout_height="311dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/webview_background"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="55dp"
        android:layout_height="54dp"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/womanwalk" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_walk"
        app:srcCompat="@drawable/ear" />
</androidx.constraintlayout.widget.ConstraintLayout>